<div class="card_container">
	<div class="card">
		<div class="card_follow">
			<h1><%= title%></h1>
			<form id="form_follow_new" action="/admin/blog/new" method="post" accept-charset="utf-8">
				<div>
					<span>标题: </span>
					<input type="text" name="title" id="editArticleTitle"></input><br />
					<span>内容: </span>
					<textarea name="body" rows="10" cols="30" id="editArticleBody"></textarea><br />
					<a id="submit_new_article" class="a_btn">发布</a>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	$(function() {
		document.querySelector('#submit_new_article').addEventListener('click', function(ev){
		    ev.preventDefault();
		    $('#form_follow_new').submit();
		}, false);
	});
</script>